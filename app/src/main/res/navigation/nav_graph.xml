<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeViewPagerFragment">

    <fragment
        android:id="@+id/homeViewPagerFragment"
        android:name="com.example.thefortnightly.ui.viewpager.HomeViewPagerFragment"
        android:label="HomeViewPagerFragment">
        <action
            android:id="@+id/navigatePagerFragmentToDetailsDetailsFragment"
            app:destination="@id/articleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="com.example.thefortnightly.ui.categories.BookmarksFragment"
        android:label="BookmarksFragment">
        <action
            android:id="@+id/navigateBookmarksToDetails"
            app:destination="@id/articleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.example.thefortnightly.ui.search.SearchNewsFragment"
        android:label="SearchNewsFragment">
        <action
            android:id="@+id/navigateSearchToDetails"
            app:destination="@id/articleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailsFragment"
        android:name="com.example.thefortnightly.ui.details.ArticleDetailsFragment"
        android:label="ArticleDetailsFragment">
        <argument
            android:name="newsArticle"
            app:argType="com.example.thefortnightly.data.NewsArticle" />
    </fragment>
</navigation>